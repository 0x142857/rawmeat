body
  margin 0
  font 14px/20px "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", "Microsoft Yahei", sans-serif

a
  color #333
  text-decoration none

h1,h2,h3,h4,h5 
  margin 0
  line-height normal

h1
  font-size 2em

h2
  font-size 1.2em

ul
  padding-left 0
  list-style none

blockquote
  padding 0 0 0 10px
  margin 0
  border-left 1px solid #ccc
  font-size 1.25em
  line-height 1.3

*
  -webkit-box-sizing border-box
  -moz-box-sizing @-webkit-box-sizing
  box-sizing @-webkit-box-sizing

.textarea
  height 300px
  font-size 16px

.input,textarea
  outline none
  border 1px solid #eee
  border-top-color #ddd
  border-left-color #ddd
  border-radius 2px
  padding 15px
  font-size 14px
  line-height 1.4
  width 100%

.button
  outline none
  cursor pointer
  border 1px solid #ddd
  border-bottom-color #c5c5c5
  border-radius 2px
  width 200px
  padding 15px
  font-size .8em
  -webkit-box-shadow 0 1px 3px rgba(0,0,0,.05)
  box-shadow @-webkit-box-shadow
  background-color #eaeaea
  background-image -moz-linear-gradient(#fafafa, #eaeaea)
  background-image -webkit-linear-gradient(#fafafa, #eaeaea)
  background-image linear-gradient(#fafafa, #eaeaea)
  background-repeat repeat-x

.hr
  height 1px
  background-color #eee

.m10
  margin 10px 0

.m20
  margin 20px 0